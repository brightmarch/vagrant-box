{
    "variables": {
        "vmx_path": "",
        "box_name": ""
    },

    "builders": [
        {
            "type": "vmware-vmx",
            "boot_wait": "10s",
            "source_path": "{{user `vmx_path`}}",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
            "headless": true,
            "vm_name": "{{user `box_name`}}"
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 9,
            "output": "{{user `box_name`}}.box"
        }
    ]
}
