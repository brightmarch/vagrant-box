{
    "variables": {
        "box_name": "debian81-64bit",
        "preseed_path": "debian-8/preseed.cfg"
    },

    "builders": [
        {
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed_path`}} <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=brightmarch.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "<enter><wait>"
            ],

            "type": "vmware-iso",
            "boot_wait": "10s",
            "guest_os_type": "debian8-64",
            "http_directory": "http",
            "iso_url": "http://cdimage.debian.org/cdimage/release/8.1.0/amd64/iso-cd/debian-8.1.0-amd64-CD-1.iso",
            "iso_checksum": "22bae271a732333ebff150598292d9907d2c6001",
            "iso_checksum_type": "sha1",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -hP now",
            "headless": false,
            "vm_name": "{{user `box_name`}}",
            "tools_upload_flavor": "linux"
        }
    ],

    "provisioners": [
        {
            "type": "shell",
            "inline": ["apt-get update", "apt-get install -y sudo vim build-essential dkms"]
        },
        {
            "type": "ansible-local",
            "playbook_file": "provisioning/provision.yml"
        }
    ],

    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 9,
            "output": "{{user `box_name`}}.box"
        }
    ]
}
